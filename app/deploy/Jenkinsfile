pipeline {
    agent any
    stages {
        stage('SCM Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], doGenerateSubmoduleConfigurations: false, extensions: [[$class: 'CleanBeforeCheckout', deleteUntrackedNestedRepositories: true]], submoduleCfg: [], userRemoteConfigs: [[credentialsId: 'github-login', url: 'https://github.com/Yuzyzy88/trial-devsecops.git']]])
            }
        }
        stage('Create Image') {
            steps {
                sh '''
                docker image rm 10.8.60.126:5000/devsecops:v1 || echo "No existing image found"
                docker-compose -f app/deploy/docker-compose.yaml build --no-cache
                '''
            }
        }
        stage('Push Image to nexus') {
            steps {
                sh '''
                set +x
                docker login --username=admin --password=$nexusPassword 10.8.60.126:5000
                set -x
                docker push 10.8.60.126:5000/devsecops:v${BUILD_NUMBER}
                '''
            }
        }
        stage('Run the docker compose') {
            steps {
                sh '''
                docker-compose -f app/deploy/docker-compose.yaml stop
                docker-compose -f app/deploy/docker-compose.yaml up -d
                '''
            }
        }
    }
}
